{
    "$id": "https://github.com/Greengage-project/interlink-project/blob/master/greengage_academy_jsonschema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "GREENGAGE Academy resources",
    "type": "object",
    "properties": {
        "id": {
            "description": "ID of the resource.",
            "type": "string"
        },
        "name": {
            "description": "Name of the resource.",
            "type": "string"
        },
        "keywords": {
            "description": "Keywords of the resource. EUcitizen",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "url": {
            "description": "URL of the resource.",
            "type": "uri-reference"
        },
        "abstract": {
            "description": "Abstract of the resource.",
            "type": "string",
            "maxLength": 3000
        },
        "audience": {
            "description": "Audience of the resource.",
            "type": "array",
            "items": {
                "$ref": "#/$defs/Audiences"
            }
        },
        "authors": {
            "description": "Authors of the resource. Initial + surname",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "citizen_science_description": {
            "description": "Description of the citizen science aspect of the resource.",
            "type": "string"
        },
        "category": {
            "description": "Category of the resource.",
            "type": "string",
            "$ref": "#/$defs/Categories"
        },
        "publisher": {
            "description": "Publisher of the resource.",
            "type": "string"
        },
        "publication_year": {
            "description": "Publication year of the resource.",
            "type": "date"
        },
        "license": {
            "description": "License of the resource.",
            "type": "string"
        },
        "doi": {
            "description": "DOI of the resource.",
            "type": "string"
        },
        "language": {
            "description": "Language of the resource.",
            "type": "string",
            "$ref": "#/$defs/Languages"
        },
        "problemprofiles": {
            "description": "Problem profiles that the resource tackles.",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "format": {
            "description": "Format of the resource.",
            "$ref": "#/$defs/Formats"
        },
        "logotype": {
            "description": "Logotype of the resource.",
            "type": "uri-reference"
        },
        "nature": {
            "description": "Nature of the resource.",
            "type": "string",
            "$ref": "#/$defs/Natures"
        },
        "instructions": {
            "description": "Instructions of the resource.",
            "type": "string"
        }
        
    },
    "if": {
        "properties": {
            "nature": {
                "const": "knowledge"
            }
        }
    },
    "then": {
        "properties": {
            "software_interlinker": {
                "description": "Software interlinker of the resource.",
                "type": "string",
                "$ref": "#/$defs/SoftwareInterlinkers"
            }
        }
    },
    "$defs": {
        "Languages": {
            "default": "en",
            "enum": [
                "en",
                "es",
                "it",
                "nl"
            ]
        },
        "Audiences": {
            "enum": [
                "Community Members & Citizens",
                "CS Project Leaders & Initiators",
                "CSOs & NGOs",
                "Educators",
                "Policy & Decision Makers",
                "Research & Academics",
                "ALL Audiences"
            ]
        },
        "Categories": {
            "enum": [
                "Collection",
                "Dataset",
                "Event",
                "Image",
                "Text",
                "Interactive Resource (Website)",
                "Physical Object (Hardware)",
                "Moving Image (Video)",
                "Service",
                "Software",
                "Sound",
                "Still Image"
            ]
        },
        "Formats": {
            "enum": [
                "pdf",
                "editable_source_document",
                "open_document",
                "structured_format",
                "sofware"
            ]
        },
        "Natures": {
            "enum": [
                "software",
                "knowledge"
            ]
        },
        "SoftwareInterlinkers": {
            "enum": [
                "googledrive",
                "surveyeditor",
                "ceditor",
                "externalresourcemanager"
            ]
        }
    }
}
